    <div class="container">
      <section  id="s1">
        <%- body %>
      </section>
    </div>
    <!-- ZONA DE PIE DE PAGINA -->
    <footer class="footer"   id="f1">
    <% include ./includes/pie_pagina %>
    </footer>
    <!-- ZONA DE CARGA DE SCRIPTS EXTERNOS -->
