<fieldset>
  <div class="form-group">
    <!-- Incluimos la clase hidden-xs de Bootstrap para que se oculte en telefonos -->
    <label for="nombre" class="col-lg-2 control-label hidden-xs">Nombre</label>
    <div class="col-lg-10">
    <input class="form-control" id="nombre" name="user[nombre]" placeholder="Introduzca nombre" value="<%= user.nombre %>" type="text" required>
    </div>
  </div>
  <%if(updatelogin) {%>
  <div class="form-group">
    <label for="user" class="col-lg-2 control-label hidden-xs">Login</label>
    <div class="col-lg-10">
    <input class="form-control" id="user" name="user[login]" placeholder="Introduzca login" value="<%= user.login %>" type="text" required>
    </div>
  </div>
  <%}%>
  <div class="form-group">
    <label for="clv" class="col-lg-2 control-label hidden-xs">Clave</label>
    <div class="col-lg-10">
    <input class="form-control" id="clv" name="user[password]" placeholder="Introduzca contraseña" value=""
           type="password"
           maxlength=16
           required
           title=""
           pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
           onchange="this.setCustomValidity(this.validity.patternMismatch ? 'La contraseña debe contener al menos 8 caracteres, incluyendo mayúsculas / minúsculas y números' : '');
                     if(this.checkValidity()) form.clv2.pattern = this.value;">
    </div>
  </div>
  <div class="form-group">
    <label for="clv2" class="col-lg-2 control-label hidden-xs">Repetir Clave</label>
    <div class="col-lg-10">
    <input class="form-control" id="clv2" name="user[password2]" placeholder="Repita contraseña" value=""
           type="password"
           maxlength=16
           required
           title=""
           pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
           onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Por favor introduzca el mismo valor que clave' : '')">
    <input type="hidden" name="user[acceso]" value="<%=new Date()%>">
    </div>
  </div>
  <% if(session.user.isadmin) { %>
  <div class="form-group">
      <label for="adm" class="col-lg-2 control-label hidden-xs">¿Es administrador?</label>
      <div class="col-lg-1">
        <span class="input-group-addon">
      <input type="checkbox" id="adm" name="user[admin]" title="Es administador" <%= (user.admin)? 'checked':'' %>>
    </span>
    </div>
  </div>
  <% } %>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
    <a type="button" class="btn btn-default" href='/users'>Volver</a>
    <button type="reset" class="btn btn-warning">Borrar datos</button>
    <button type="submit" class="btn btn-primary">Guardar usuario</button>
    </div>
  </div>
</fieldset>
